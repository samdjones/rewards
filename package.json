{
  "name": "kids-reward-tracker",
  "version": "1.1.3",
  "description": "Kids Reward Tracking Application",
  "private": true,
  "workspaces": [
    "packages/*",
    "server",
    "client"
  ],
  "scripts": {
    "lint": "eslint .",
    "build:shared": "npm run build -w @rewards/shared",
    "server": "npm run dev -w server",
    "server:start": "npm run start -w server",
    "client": "npm run dev -w client",
    "test": "npm test -w server",
    "test:ui": "npm run test:e2e -w client",
    "typecheck": "npm run typecheck -w server",
    "build": "npm run build:shared && npm run build -w server",
    "build:client": "npm run build -w client",
    "build:all": "npm run build:shared && npm run build:client && npm run build -w server && npm run copy-client",
    "copy-client": "mkdir -p server/dist/public && cp -r client/dist/* server/dist/public/",
    "start": "node server/dist/server.js",
    "tag-release": "bash scripts/tag-release.sh"
  },
  "keywords": [
    "rewards",
    "kids",
    "parenting",
    "tracking"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.3.0",
    "typescript-eslint": "^8.54.0"
  }
}
