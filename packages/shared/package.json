{
  "name": "@rewards/shared",
  "version": "1.0.0",
  "description": "Shared types for Kids Reward Tracker",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
